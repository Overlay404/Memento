<Page x:Class="Memento.View.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Memento.View.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" Width="300">
            <local:TextBlockCustom TextInTextBlock="Имя" Margin="0 10"/>
            <TextBox x:Name="NameUser"/>
            <local:TextBlockCustom TextInTextBlock="Логин" Margin="0 10"/>
            <TextBox x:Name="Login"/>
            <local:TextBlockCustom TextInTextBlock="Пароль" Margin="0 10"/>
            <TextBox x:Name="Password"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
                <Button Content="Зарегестрироваться" FontSize="14" Margin="10 0" x:Name="InBtn"/>
                <Button Content="Вход" FontSize="14" x:Name="RegBtn"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
